{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/": ["./shared/"]
    }
  },
  "include": [
    "index.ts",
    "routes.ts",
    "/*.ts"
  ],
  "exclude": ["node_modules"]
}
